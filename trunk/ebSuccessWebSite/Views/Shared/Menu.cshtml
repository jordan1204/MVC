<script>
    $(document).ready(function () {
        $('.top-menu').on('mouseenter', 'li > a', function () {
            var getSilbings = $(this).siblings();
            $(getSilbings[0]).show();
        });
        $('.top-menu').on('mouseenter', 'li', function () {
            var getDiv = $(this).find("div");
            $(getDiv[0]).show();
        });
        $('.top-menu').on('mouseleave', 'li', function () {
            var getDiv = $(this).find("div");
            $(getDiv[0]).hide();
        });
        $('.top-menu').on('mouseenter', 'li > .sublist.first-level', function () {
            $(this).show();
        });
        $('.top-menu').on('mouseleave', 'li > .sublist.first-level', function () {
            $(this).hide();
        });
    });
</script>