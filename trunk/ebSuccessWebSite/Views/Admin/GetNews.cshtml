    all: unset;
}
</style>
<div class="editor-content">

    <div class="panel panel-success">
        <div class="panel-heading">編輯新聞</div>
        <div class="panel-body">
@using (Html.BeginForm("NewsModify", "Admin", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
    @Html.HiddenFor(x => x.Id)
    <div class="form-group">
        <label for="Name">新聞標題</label>
        @Html.TextBoxFor(m => m.NewsTitle, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label for="Name">新聞摘要</label>
        @Html.TextBoxFor(m => m.Abstract, new { @class = "form-control" })
    </div>
    if (Model.FileId != 0)
    {
        <div class="form-group">
            <label for="NewsFile">舊檔案</label>
            <a href="@Url.Action("GetFile", "Common", new { fileId = Model.FileId })">@Model.FileName</a>
            <a href="#" onclick="DelFile(@Model.Id);">移除檔案</a>
        </div>
    }
    <div class="form-group">
        <label for="NewsFile">上傳新檔案(將蓋掉原檔)</label>
        <input type="file" id="NewsFile" name="NewsFile">
    </div>
    <div class="form-group">
        <label for="Url">新聞內容</label>
        @Html.TextAreaFor(m => m.NewsContent, new { @class = "ckeditor" })
    </div>
    <div class="form-group">
        <label for="Published">發布</label>
        @Html.CheckBoxFor(m => m.PublishedStatus)
    </div>
    <hr>
    <div class="form-group" align="center">
        <button type="submit" class="btn btn-success">修改</button>
        <button type="reset" class="btn btn-danger">重填</button>
    </div>
}

        </div>
    </div>


</div>
<script src="~/Scripts/ckeditor/ckeditor.js"></script>
<script>
    CKEDITOR.replace('NewsContent', { filebrowserImageUploadUrl: '@Url.Action("UploadPicture", "Home")', extraAllowedContent: 'span(*);ul;li;table;tr;td;style;*[id];*(*);*{*}', height: '300' });

    function RefreshPage() {
        location.reload();
    }

    function DelFile(newsId) {
        var r = confirm("確定要刪除？");
        if (r == true) {
            $.post("@Url.Action("DelFile", "Admin")", { newsId: newsId }, function (data) {
                if (data.Success) {
                    alert("刪除成功");
                    RefreshPage();
                }
                else {
                    alert(data.Message);
                }
            }, "json");
        }
    }
    
</script>
